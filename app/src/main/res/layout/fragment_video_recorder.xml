<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yonguk.videorecord.com.example.videophoto.videorecord.Activity.MainActivity">

    <TextureView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/texture_view" />

    <Button
        android:id="@+id/btn_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Capture" />
    <Chronometer
        android:visibility="invisible"
        android:id="@+id/chronometerID"
        android:textColor="#960002"
        android:textSize="45sp"
        android:layout_gravity="bottom|center_horizontal"
        android:text="kkk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/seeAllVideoBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:text="See Videos" />
</FrameLayout>